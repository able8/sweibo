#!/bin/bash

export CONFIG_DIR="$HOME/.sweibo"
MODULE_DIR="./modules"
AUTH_FILE="$CONFIG_DIR/auth"
export ACCESS_TOKEN=""
if [[ ! ( -d $CONFIG_DIR ) ]]; then
    mkdir $CONFIG_DIR
fi

function print_usage()
{
    echo "Usage: TODO"
}

function clean()
{
    if [ -d $CONFIG_DIR ]; then
        rm -rv $CONFIG_DIR
    else
        echo "Already clean"
    fi
}

function auth()
{
    ./auth $AUTH_FILE
}

function get_access_token()
{
    if [ -f $AUTH_FILE ]; then
        ACCESS_TOKEN=$(awk '$1=="access_token" {print $2}' $AUTH_FILE)
    fi
    # TODO check the access
}

case $1 in
    clean) clean; exit;;
    auth) auth; exit;;
    *) :;; # Do nothing
esac

echo "---------- Initializing ----------"
get_access_token
while [ -z $ACCESS_TOKEN ];
do
    auth
    get_access_token
done
printf "Access token loaded: %s\n" $ACCESS_TOKEN
echo "---------- Finish ----------------"

EXIT_FLAG=""
while [ -n EXIT_FLAG ];
do
    printf "(SWeibo) "
    read input
    case $(echo $input | awk '{print $1}') in
        q) exit;;
        '') :;;
        *)
            call=$(echo $input | xargs)
            eval "$MODULE_DIR/$call"
            ;;
    esac
done