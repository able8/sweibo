#!/bin/bash

export CONFIG_DIR="$HOME/.sweibo"
export AUTH_FILE="$CONFIG_DIR/auth"
export ACCESS_TOKEN=""
if [[ ! ( -d $CONFIG_DIR ) ]]; then
    mkdir $CONFIG_DIR
fi

function print_usage()
{
    echo "Usage: TODO"
}

function clean()
{
    if [ -d $CONFIG_DIR ]; then
        rm -rv $CONFIG_DIR
    else
        echo "Already clean"
    fi
}

function auth()
{
    ./auth $AUTH_FILE
}

function get_access_token()
{
    if [ -f $AUTH_FILE ]; then
        ACCESS_TOKEN=$(awk '$1=="access_token" {print $2}' $AUTH_FILE)
    fi
    # TODO Validate
}

if [[ ( -n $1 ) && ( $1 = "clean" ) ]]; then
    echo "Cleaning..."
    clean
    exit
fi

echo "---------- Initializing ----------"
get_access_token
while [ -z $ACCESS_TOKEN ];
do
    auth
    get_access_token
done
printf "Access token loaded: %s\n" $ACCESS_TOKEN
echo "---------- Finish ----------------"

case $1 in
    auth)
        auth;;
    *)
        print_usage;;
esac
