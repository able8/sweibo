#!/bin/bash

# | check_error || exit 1
function check_error() {
    local error_msg=$(jq ".error")
    if [[ ( -n "$error_msg" ) && ( $error_msg != null ) ]]; then
        >&2 printf "\e[31mError: %s\n\e[0m" "$error_msg"
        exit 1
    fi
}

function breakline() {
    echo -en "$1"

    local cols=$(tput cols)

    local to_print
    let 'to_print = cols - col_now'

    local i=0
    while (( i < cols )); do
        echo -n "-"
        let ++i
    done

    if [ -n "$2" ]; then
        echo -e "$2"
    else
        echo -e "\e[0m"
    fi
}
