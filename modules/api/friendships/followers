#!/bin/bash

source "$SWEIBO_FACILITIES_DIR/common"

params="access_token=$ACCESS_TOKEN"
test=false

while getopts c:p:t FLAG; do
    case $FLAG in
        c) params="$params&count=$OPTARG";; # count
        p) params="$params&cursor=$OPTARG";;  # page
        t) test=true;;
        *) :;;
    esac
done

if [ $test = true ]; then
    echo "curl -s \"https://api.weibo.com/2/friendships/followers.json?$params\""
    exit 1
fi

response=$(curl -s "https://api.weibo.com/2/friendships/followers.json?$params")

echo "$response" | check_error || exit 1
echo "$response"
